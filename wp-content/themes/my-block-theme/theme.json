{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "Neutral",
                    "color": "#989898",
                    "name": "Neutral"
                },
                {
                    "slug": "darkBlue",
                    "color": "#10416f",
                    "name": "Dark Blue"
                },
                {
                    "slug": "mediumBlue",
                    "color": "#497394",
                    "name": "Medium Blue"
                },
                {
                    "slug": "lightBlue",
                    "color": "#90B2C4",
                    "name": "Light Blue"
                },
                {
                    "slug": "accentGold",
                    "color": "#f2b11d",
                    "name": "Accent Gold"
                }
            ],
            "gradients": [
            {
                "name": "Blue to Gold",
                "slug": "blue-to-gold",
